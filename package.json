{
  "name": "icestore",
  "version": "0.1.1",
  "description": "基于 React Hooks 的数据流方案",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ice-lab/icestore.git"
  },
  "keywords": [
    "hooks",
    "state"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ice-lab/icestore/issues"
  },
  "homepage": "https://github.com/ice-lab/icestore",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "lint": "npm run lint:nofix -- --fix",
    "lint:nofix": "eslint --cache --ext .ts ./src",
    "cov": "rm -rf coverage && NODE_ENV=unittest nyc mocha && nyc report --reporter=json --reporter=lcov",
    "test": "NODE_ENV=unittest mocha --trace-warnings"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^11.13.7",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "chai": "^4.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^1.3.1",
    "mocha": "^3.5.0",
    "nyc": "^14.0.0",
    "react": "^16.7.0",
    "ts-node": "^3.2.0",
    "typescript": "^3.4.4"
  },
  "dependencies": {
    "lodash.isfunction": "^3.0.9"
  },
  "peerDependencies": {
    "react": "^16.7.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "html",
      "lcovonly"
    ],
    "all": true
  }
}
